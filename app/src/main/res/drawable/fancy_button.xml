<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- מצב לחוץ -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="145"
                android:startColor="#5a5a5a"
                android:endColor="#3a3a3a"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- מצב רגיל -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="145"
                android:startColor="#4a4a4a"
                android:endColor="#2a2a2a"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#66FFFFFF" />
            <padding android:left="20dp" android:top="12dp" android:right="20dp" android:bottom="12dp" />
        </shape>
    </item>

</selector>
